<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF">

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed"
        android:text="REVIEWVIA"
        android:textStyle=""
        android:textAlignment="center"
        android:textSize="40sp"
        />

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/textView_title"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/textView_slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="Arial"
        android:text="Super easy to find the reviews!"
        android:textAlignment="center"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/textView_slogan2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="100dp"
        android:fontFamily="Arial_bold"
        android:text="Tell us the barcode by "
        android:textAlignment="center"
        android:textSize="25sp"
        />

    <LinearLayout
        android:id="@+id/layout_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_slogan2"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/image_scan"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:src="@drawable/button_scan"/>

        <ImageView
            android:id="@+id/image_or"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:src="@drawable/or"/>

        <ImageView
            android:id="@+id/image_enter"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:src="@drawable/icon_input"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_image"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="60dp"
            android:text="SCAN"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="80dp"
            android:text="ENTER"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/btn_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView_title"
        android:layout_marginBottom="59dp"
        android:text="Test"/>

    <TextView
        android:id="@+id/tv_test"
        android:layout_width="198dp"
        android:layout_height="113dp"
        android:layout_alignEnd="@+id/textView_title"
        android:layout_alignParentBottom="true"
        android:text="Result:"/>

</RelativeLayout>