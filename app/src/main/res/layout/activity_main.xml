<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF">

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed"
        android:text="REVIEWVIA"
        android:textStyle=""
        android:textAlignment="center"
        android:textSize="40sp"
        />

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/textView_title"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/textView_slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="Arial"
        android:text="Super easy to find the reviews!"
        android:textAlignment="center"
        android:textSize="18sp"
        />



    <LinearLayout

        android:id="@+id/layout_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:orientation="horizontal"
        android:weightSum="3">

    <LinearLayout
        android:id="@+id/layout_image2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="5">

        <ImageView
            android:id="@+id/image_scan"
            android:layout_width="195dp"
            android:layout_height="162dp"
            android:layout_weight="1"
            android:src="@drawable/button_scan" />

        <TextView
            android:layout_width="58dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SCAN" />

        <ImageView
            android:id="@+id/image_or"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:src="@drawable/or" />

        <ImageView
            android:id="@+id/image_enter"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/icon_input" />

        <TextView
            android:layout_width="117dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Enter manually." />

    </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>